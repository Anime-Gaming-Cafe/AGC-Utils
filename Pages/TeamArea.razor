@page "/teamarea"
@attribute [Authorize(Roles = "BotOwner, Administrator, HeadModerator, Moderator, Supporter, HeadEventmanager, Team")]

<h3>Teambereich</h3>


<div class="container mt-5 mb-5">
    <div class="col-12 mb-4">
        <div class="glass-card">
            <div class="card-body">
                <h5 class="card-title">
                    Berichte
                    <span>
                        <i class="bi bi-journals"></i>
                    </span>
                </h5>
                <AuthorizeView Roles="BotOwner, Administrator, HeadModerator, Moderator, Supporter, Team">
                    <a href="/teamarea/journals/meetingdocumentation" class="btn btn-primary-glass mt-2 mb-2">Besprechungsprotokolle</a>
                </AuthorizeView>
            </div>
        </div>
    </div>
    <div class="col-12 mb-4">
        <div class="glass-card">
            <div class="card-body">
                <h5 class="card-title">
                    Bewerbungsmanagement
                    <span>
                        <i class="bi bi-journals"></i>
                    </span>
                </h5>
                <AuthorizeView Roles="BotOwner, Administrator, HeadModerator">
                    <a href="/teamarea/applysystem/viewapplications" class="btn btn-primary-glass mt-2 mb-2">Bewerbungen ansehen (Team allgemein)</a>
                </AuthorizeView>
                <AuthorizeView Roles="BotOwner, Administrator, HeadModerator, HeadEventmanager">
                    <a href="/teamarea/applysystem/vieweventapplications" class="btn btn-primary-glass mt-2 mb-2">Bewerbungen ansehen (Eventteam, nur Eventmanager)</a>
                </AuthorizeView>
                <AuthorizeView Roles="BotOwner, Administrator, HeadModerator">
                    <a href="/konfiguration/applysystem/modifypanelmessage" class="btn btn-primary-glass mt-2 mb-2">Bewerbungspanel Text bearbeiten</a>
                </AuthorizeView>
                <AuthorizeView Roles="BotOwner, Administrator, HeadModerator">
                    <a href="/konfiguration/applysystem/modifypositions" class="btn btn-primary-glass mt-2 mb-2">Bewerbungspositionen bearbeiten</a>
                </AuthorizeView>
            </div>
        </div>
    </div>
</div>