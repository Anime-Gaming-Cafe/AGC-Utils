@page "/teamarea"
@attribute [Authorize(Roles = "BotOwner, Administrator, HeadMod, Moderator, Supporter, Team")]

<h3>Teambereich</h3>


<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="glass-card">
                <div class="card-body">
                    <h5 class="card-title">
                        Pollsystem
                        <span><i class="fas fa-poll"></i></span>
                    </h5>
                    <AuthorizeView Roles="BotOwner, Administrator, HeadMod, Moderator, Supporter">
                        <a href="/teamarea/pollsystem/createpoll" class="btn btn-primary-glass mt-2 mb-2">Umfrage erstellen</a>
                        <a href="/teamarea/pollsystem/managepolls" class="btn btn-primary-glass mt-2 mb-2">Umfragen verwalten</a>
                    </AuthorizeView>
                </div>
            </div>
        </div>
        <div class="col-12 mb-4">
            <div class="glass-card">
                <div class="card-body">
                    <h5 class="card-title">
                        Berichte
                        <span><i class="bi bi-journals"></i></span>
                    </h5>
                    <AuthorizeView Roles="BotOwner, Administrator, HeadMod, Moderator, Supporter">
                        <a href="/teamarea/journals/tickets" class="btn btn-primary-glass mt-2 mb-2">Tickets</a>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </div>
</div>
