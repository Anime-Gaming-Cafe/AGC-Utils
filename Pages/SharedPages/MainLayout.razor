@using AGC_Management.Entities.Web
@using AGC_Management.Controller
@inherits LayoutComponentBase
@inject IHttpContextAccessor httpContextAccessor
@inject UserService usrSvc

<PageTitle>@CurrentApplication.DiscordClient.CurrentUser.Username WebUtils</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code
{
    private DiscordUserWebClaim claim;


    protected override async Task OnInitializedAsync()
    {
        claim = await usrSvc.GetInfo(httpContextAccessor.HttpContext);
    }
}